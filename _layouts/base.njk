<!doctype html>
<html lang="de">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ metaDescription|default('Get to know me.') }}">
    <title>{{ title|default('Tim Kleyersburg') }}</title>

    {% block styles %}
        <link rel="stylesheet" type="text/css" media="screen" href="/bundle.css?v={% version %}"/>

        <link rel="preload" href="/fonts/source-sans-pro-v14-latin-regular.woff2" as="font" crossorigin="anonymous"/>
        <link rel="preload" href="/fonts/source-sans-pro-v14-latin-600.woff2" as="font" crossorigin="anonymous"/>
        <link rel="preload" href="/fonts/source-sans-pro-v14-latin-700.woff2" as="font" crossorigin="anonymous"/>
    {% endblock %}

    {% block meta_tags %}
        <meta property="og:title" content='{{ title|default('Tim Kleyersburg') }}'/>
        <meta property="og:description" content="{{ metaDescription|default('Get to know me.') }}" />
        <meta property="og:url" content="https://www.tim-kleyersburg.de{{ page.url }}"/>
        <meta property="og:site_name" content="Tim Kleyersburg"/>
        {% if seo.socialImage %}
            <meta property="og:image" content="{% ogImage page.url %}" />
            <meta name="twitter:image" content="{% ogImage page.url %}" />
        {% endif %}
        <meta name="twitter:card" content="summary_large_image"/>
        <meta name="twitter:description" content="{{ metaDescription|default('Get to know me') }}" />
        <meta name="twitter:title" content='{{ title|default('Tim Kleyersburg') }}'/>
        <meta name="twitter:site" content="@timkley"/>
    {% endblock %}
</head>
<body class="font-sans bg-gray-50 dark:bg-gray-800 dark:text-gray-300 selection:bg-blue-200">
<div class="px-4 pt-6 pb-12">
    {% block header %}
        <header class="flex justify-between items-center mx-auto mb-8 max-w-3xl">
            <div class="font-semibold tracking-tight">
                <a class="border-transparent hover:border-blue-500" href="/">Tim Kleyersburg</a>
            </div>

            <div class="space-x-2">
                <a href="/">Home</a>
                <a href="/articles">Articles</a>
            </div>
        </header>
    {% endblock %}

    {% block content %}
        {{ content | safe }}
    {% endblock %}
</div>

{% block footer %}
    <footer class="fixed bottom-0 w-full h-1 bg-gradient-to-r from-blue-700 to-blue-300"></footer>
{% endblock %}
</body>
</html>
