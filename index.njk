        </p>
    </div>

    <div>
        {{ heading('h2', 'Latest articles') }}

        {% set articleLimit = 5 %}
        <ul class="space-y-3">
            {% for article in collections.article | reverse | limit(articleLimit) %}
                <li><a href="{{ article.url }}">{{ article.data.title }}</a></li>
            {% endfor %}
        </ul>

        {% if collections.post | length  > articleLimit %}
            <a class="mt-4" href="/articles">more articles</a>
        {% endif %}
    </div>

    <div>
        {{ heading('h2', 'Where to find me online') }}

        <ul class="space-y-3">
            {% for contact_item in contact_items %}
                <li>
                    <a href="{{ contact_item.url }}">
                        {{ contact_item.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>

    <div>
        {{ heading('h2', 'My career') }}

        <ul class="space-y-8 md:space-y-12">
            {% for item in cv_items %}
                <li>
                    <h4 class="mb-1 text-lg font-semibold">{{ item.title }}</h4>
                    <p class="mb-1 text-sm text-gray-600">{{ item.date }}</p>
                    <p class="mb-3 text-sm italic text-gray-500">{{ item.employer }}</p>
                    {{ item.content }}
                </li>
            {% endfor %}
        </ul>
    </div>
</div>