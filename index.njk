{% from 'macros.njk' import heading %}

<div class="mx-auto space-y-16 max-w-lg text-center sm:space-y-20 md:space-y-24">
    <div>
        {{ heading('h1', 'ðŸ‘‹ Hello world!') }}
        <p class="leading-relaxed lg:text-xl">
