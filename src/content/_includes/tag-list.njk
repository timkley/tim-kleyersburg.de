<div class="flex flex-wrap gap-3">
	{% for tag in tags %}
		{% if tag !== 'article' %}
			<a
				class="border border-dashed hover:border-solid rounded-full bg-sky-200/25 tracking-wide dark:bg-gray-700 dark:hover:bg-slate-600 dark:text-slate-100 dark:hover:text-slate-100 px-3 text-sm py-1"
				href="/tags/{{ tag | slug }}"
			>
				{{ tag }}
			</a>
		{% endif %}
	{% endfor %}
</div>